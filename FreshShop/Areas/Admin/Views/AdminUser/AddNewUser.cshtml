@model FreshShop.Models.ApplicationUser
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "AddNewUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}

<div class="container">
    <br />
    <h2 style="margin-left: 200px;color:black"><b>Add New User</b></h2>
    <form asp-action="AddNewUser" method="post" enctype="multipart/form-data" style="margin-left:200px;" id="basic-form">
        <div class="p-4 rounded border">
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="UserName">Email Id</label>
                </div>
                <div class="col-5">
                    <input type="email" asp-for="UserName" class="form-control" autocomplete="off">
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="PasswordHash">Password</label>
                </div>
                <div class="col-5">
                    <input type="password" asp-for="PasswordHash" class="form-control" autocomplete="off">
                </div>
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Name" class="form-control" autocomplete="off">
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Address"></label>
                </div>
                <div class="col-5">
                    <textarea asp-for="Address" class="form-control" autocomplete="off"></textarea>
                </div>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="City"></label>
                </div>
                <div class="col-5">
                    <input asp-for="City" class="form-control" autocomplete="off">
                </div>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button asp-action="AddNewUser" class="btn btn-primary" asp-controller="AdminUser">Save</button>
                <a asp-action="Index" class="btn btn-success">Back To List</a>
            </div>

        </div>
    </form>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#basic-form").validate({
            rules: {
                UserName: {
                    required: true
                },
                PasswordHash: {
                    required: true,
                }
            },
            messages: {
                UserName: "Please enter your Email",
                PasswordHash: "Please enter your Password"
            }
        });
</script>