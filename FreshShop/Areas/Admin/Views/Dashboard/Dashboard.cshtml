<!doctype html>
<html>
<head>
    @model FreshShop.Areas.Admin.Models.DashboardViewModel
    @{
        ViewData["Title"] = "Index";
        Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
    }
    <link href="~/admin_css/admin-dashboard.css" rel="stylesheet" />
</head>
<body>
    <div class="container" style="padding-left:200px;">
        <div class="row">
            <div class="col-md-4 col-xl-3 f-right">
                <div class="card bg-c-pink order-card">
                    <div class="card-block">
                        <h2 class="text-right"><i class="fa fa-cart-plus f-left"></i><span>@Model.products_count</span></h2>
                        <p class="m-b-0">Total Products<span class="f-right"></span></p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-xl-3">
                <div class="card bg-c-green order-card">
                    <div class="card-block">
                        <h2 class="text-right"><i class="fa fa-user f-left"></i><span>@Model.users_count</span></h2>
                        <p class="m-b-0">Total Customers<span class="f-right"></span></p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-xl-3">
                <div class="card bg-c-yellow order-card">
                    <div class="card-block">
                        <h2 class="text-right"><i class="fa fa-list-alt f-left"></i><span>@Model.category_count</span></h2>
                        <p class="m-b-0">Total Categories<span class="f-right"></span></p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-xl-3">
                <div class="card bg-c-blue order-card">
                    <div class="card-block">
                        <h2 class="text-right"><i class="fa fa-fw fa fa-shopping-bag f-left"></i><span>48</span></h2>
                        <p class="m-b-0">Total Orders Received<span class="f-right"></span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="myPlot" style="width:100%;max-width:500px;float:right"></div>
    <canvas id="myChart" style="width:100%;max-width:550px;float:right;height:350px;margin-top:50px;"></canvas>

    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    <script>
        var xArray = ["Summer Fruits", "Winter Fruits", "Monsoon Fruits", "Starchy Veggie", "Leafy Veggie", "Flower Veggie"];
        var yArray = [55, 49, 44, 24, 15, 20];

        var layout = { title: "Category of Products" };

        var data = [{ labels: xArray, values: yArray, hole: .4, type: "pie" }];

        Plotly.newPlot("myPlot", data, layout);
    </script>
    <script>
        var xValues = ["Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec"];
        var yValues = [5000,5000, 15000, 25000, 20000, 30000, 40000, 40000, 55000, 10000, 45000,60000];

        new Chart("myChart", {
            type: "line",
            data: {
                labels: xValues,
                datasets: [{
                    fill: false,
                    lineTension: 0,
                    backgroundColor: "rgba(0,0,255,1.0)",
                    borderColor: "rgba(0,0,255,0.1)",
                    data: yValues
                }]
            },
            options: {
                legend: { display: false },
                scales: {
                    yAxes: [{ ticks: { min: 5000, max: 60000 } }],
                }
            }
        });
    </script>
</body>
</html>




