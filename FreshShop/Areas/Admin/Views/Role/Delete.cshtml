@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}

<div class="container">
    <br />
    <h2 class="text-info" style="margin-left: 200px">Delete Role</h2>
    <form asp-action="Delete" method="post" enctype="multipart/form-data" style="margin-left:200px;" id="role-form">
        <div class="p-4 rounded border">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <h3>Do you want to delete this role?</h3>
            <div class="form-group row">
                <div class="col-2">
                    <label>Role Name</label>
                </div>
                <input type="hidden" value="@ViewBag.id" name="id" />
                <div class="col-5">
                    <input id="name" name="name" value="@ViewBag.name" class="form-control" autocomplete="off" required="required" readonly="readonly" />
                </div>
            </div>
            <div class="form-group">
                <button asp-action="Delete" class="btn btn-primary" asp-controller="Role">Delete</button>
                <a asp-action="Index" class="btn btn-success">Back To List</a>
            </div>

        </div>
    </form>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#role-form").validate({
            rules: {
                UserName: {
                    required: true
                },
                PasswordHash: {
                    required: true,
                }
            },
            messages: {
                UserName: "Please enter your Email",
                PasswordHash: "Please enter your Password"
            }
        });
</script>


