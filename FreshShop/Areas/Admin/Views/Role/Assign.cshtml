@model FreshShop.Areas.Admin.Models.RoleUserVm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Assign";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}

<div class="container">
    <br />
    <h2 style="margin-left:200px;color:black"><b>Assign Role</b></h2>
    <form method="post" enctype="multipart/form-data" asp-action="Assign" style="margin-left:200px;">
        <div class="p-4 rounded border">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <h3>@ViewBag.msg</h3>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="UserId" class="control-label"></label>
                </div>
                <div class="col-5">
                    <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-control"></select>
                </div>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="RoleId" class="control-label"></label>
                </div>
                <div class="col-5">
                    <select asp-for="RoleId" asp-items="ViewBag.RoleId" class="form-control"></select>
                </div>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button asp-action="Assign" class="btn btn-primary" asp-controller="Role">Assign</button>
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
            
    </form>
</div>

