@model ProductModel
@{
    ViewData["Title"] = "Product" + Model.ProductName;
}

<div class="container">
    <h3 class="display-4">Product details</h3>
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel">
                    @for (int i = 0; i < Model.Gallery.Count(); i++)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i==0 ? "active": "") "></li>

                    }
                </ol>
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Gallery.Count(); i++)
                    {
                        <div class="@(i==0 ? "carousel-item active": "carousel-item")">
                            <img class="d-block w-100" src="@Model.Gallery[i].URL" alt="@Model.Gallery[i].Name">
                        </div>

                    }


                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group row">
                <div class="col-12">
                    <span class="label" style="color:black;font-size:20px;">Product Name:</span>
                    <span class="label" style="color: green;font-size: 20px;">@Model.ProductName</span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-12">
                    <span class="label" style="color:black;font-size:20px;">Price:</span>
                    <span class="label" style="color: green;font-size: 20px;">@Model.Price</span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-12">
                    <span class="label" style="color:black;font-size:20px;">Description:</span>
                    <span class="label" style="color: green;font-size: 20px;">@Model.Description</span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-12">
                    <span class="label" style="color:black;font-size:20px;">Category:</span>
                    <span class="label" style="color: green;font-size: 20px;">@Model.Category</span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-12">
                    @if (Model.IsAvailable)
                    {
                        <span class="label" style="color:green;font-size:20px;">In Stock</span>
                    }
                    else
                    {
                        <span class="label" style="color:red;font-size:20px;">Out of Stock</span>
                    }
                    <a style="font-size:25px;" class="pl-5" asp-action="AddWishlist" asp-controller="Cart" asp-route-id="@Model.Id"><i class="fas fa-heart" style="color:red"></i></a>
                </div>
            </div>

            <div>
                @*<div class="col-md-4">
                    @if (productModel != null)
                    {
                        <button type="submit" class="btn btn-danger form-control" asp-action="Remove" asp-controller="Product" asp-route-id="@Model.Id">Remove from Cart</button>
                    }
                    else
                    {
                        <a class="btn btn-success p-3 m-3" style="font-size:15px;" asp-action="Detail1" asp-controller="Product">Add to Cart</a>
                    }
                </div>*@
                <div class="col-md-4">
                    <a class="btn btn-primary p-3 m-3" style="font-size:15px;" asp-action="GetAllProducts" asp-controller="Product">
                        Back to List
                    </a>
                </div>
                
                <div class="col-md-4">
                    @if (Model.IsAvailable)
                    {
                        <a class="btn btn-success p-3 m-3" style="font-size:15px;" asp-action="Buy" asp-controller="Cart" asp-route-id="@Model.Id">Add to Cart</a>
                    }
                    else
                    {
                        <button class="btn btn-success p-3 m-3" style="font-size:15px;" asp-action="Buy" asp-controller="Cart" asp-route-id="@Model.Id" disabled>Add to Cart</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>





