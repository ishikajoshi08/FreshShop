@using FreshShop.Models;
@model IEnumerable<ProductModel>
@{
    ViewData["Title"] = "All Products";
}


<div class="container">
    <h3 class="display-4">All Products</h3>
    <div class="row">

        @foreach (var product in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect fill="#868e96" width="100%" height="100%" /><text fill="#dee2e6" dy=".3em" x="50%" y="50%">Image cap</text></svg>
                    <div class="card-body">
                        @*<p class="card-text">Description</p>*@
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/Product/GetProduct/@product.Id" class="btn btn-sm btn-outline-secondary" style="height:40px; width:120px; font-size:20px">View Details</a>
                            </div>
                            <h3 class="card-title"><strong>@product.ProductName</strong></h3>
                            @*<small class="text-muted">@fruit.Color</small>*@
                        </div>
                    </div>
                </div>
            </div>
        }


    </div>
</div>
