@model Order

    <div class="container">
        <br />
        <h3>You are just one step away from ordering your fresh fruits & veggies</h3>
        <form asp-action="Checkout" method="post" enctype="multipart/form-data">
            <div class="p-4 rounded border">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Email">Email Id</label>
                    </div>
                    <div class="col-5">
                        <input type="email" asp-for="Email" class="form-control" autocomplete="off">
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Name" class="form-control" autocomplete="off">
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Address"></label>
                    </div>
                    <div class="col-5">
                        <textarea asp-for="Address" class="form-control" autocomplete="off"></textarea>
                    </div>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button asp-action="CheckoutComplete" class="btn btn-primary">Place Order</button>
                </div>

            </div>
        </form>
    </div>





