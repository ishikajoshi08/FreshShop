@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager

@if (_signInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Hello @(User.FindFirst("UserName").Value + "!")
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" asp-action="ChangePassword" asp-controller="Account">Change Password</a>
            <a class="dropdown-item" asp-action="Logout" asp-controller="Account">Logout</a>
        </div>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Cart" asp-action="Wishlist">
            Wishlist&nbsp;[@TempData.Peek("TotalCountW")]
        </a>
        <a class="nav-link text-dark" asp-controller="Cart" asp-action="Index">
           <i class="fa fa-shopping-cart"></i>&nbsp;[@TempData.Peek("TotalCount")]
        </a>
    </li>
}
else
{
    <li class="nav-item">
        <a asp-controller="Account" asp-action="Signup"><span class="glyphicon glyphicon-user"></span> Sign Up</a>
        <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Context.Request.Path"><span class="glyphicon glyphicon-log-in"></span> Login</a>
    </li>
}

