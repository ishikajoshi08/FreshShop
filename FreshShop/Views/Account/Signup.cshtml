@model FreshShop.Models.SignUpUserModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Signup</title>
    <!-- Site Icons -->
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" href="~/images/apple-touch-icon.png">
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


    <!--Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!--Site CSS-->
    <link rel="stylesheet" href="~/css/style.css">
    <!--Responsive CSS-->
    <link rel="stylesheet" href="~/css/responsive.css">
    <!--Custom CSS-->
    <link rel="stylesheet" href="~/css/custom.css">
    @*<link href="~/css/Signup.css" rel="stylesheet" />*@

    <style>
        body, html {
            height: 100%;
            margin: 0;
        }

        .container {
            /* The image used */
            background: url('../images/signup.jpg');
            /* Full height */
            height: 100%;
            width: 200%;
            /* Center and scale the image nicely */
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

            .container .col-md-4 {
                position: absolute;
                bottom: 0;
                background: rgb(0, 0, 0); /* Fallback color */
                background: rgba(0, 0, 0, 0.5); /* Black background with 0.5 opacity */
                color: #f1f1f1;
                width: 50%;
                position:relative;
            }

            /*.container .form {
                height: 100%;
            }
        */
    </style>
</head>
<body>
    <div class="container">
        <h4 style="font-weight: bold; font-size:30px; left: 120px;top:50px">Sign Up</h4> 
        <div class="row">
            <div class="col-md-4" style="top:50px">
                <form asp-action="Signup">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group" style="height:70px">
                        <label asp-for="Name" class="control-label" style="color:yellow"></label>
                        <input asp-for="Name" class="form-control" autocomplete="off"/>
                        <span asp-validation-for="Name"></span>
                    </div>

                    <div class="form-group" style="height: 70px">
                        <label asp-for="Address" class="control-label" style="color:yellow"></label>
                        <input asp-for="Address" class="form-control" autocomplete="off"/>
                        <span asp-validation-for="Address"></span>
                    </div>

                    <div class="form-group" style="height: 70px">
                        <label asp-for="City" class="control-label" style="color:yellow"></label>
                        <input asp-for="City" class="form-control" autocomplete="off"/>
                        <span asp-validation-for="City"></span>
                    </div>
                    <div class="form-group" style="height: 70px">
                        <label asp-for="Email" class="control-label" style="color:yellow" ></label>
                        <input asp-for="Email" class="form-control" autocomplete="off"/>
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group" style="height: 70px">
                        <label asp-for="Password" class="control-label" style="color:yellow"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group" style="height: 70px">
                        <label asp-for="ConfirmPassword" class="control-label" style="color:yellow"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <div class="form-group" style="height: 70px;text-align:center">
                        <input type="submit" value="Register" class="btn btn-primary" style="background-color: black;width:80px " />
                        <p>Click <a asp-action="Login" asp-controller="Account" style="color:yellow">here</a> to login</p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
